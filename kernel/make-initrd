#!/bin/bash

outpath=`pwd`/kernel/out
tmpdir=`mktemp -d`
tmpfile=`mktemp`
initrd=$outpath/initrd
init=`pwd`/kernel/init-initrd
rm -rf $tmpdir

mkdir -p $outpath
mkdir -p $tmpdir/bin
mkdir -p $tmpdir/sbin
mkdir -p $tmpdir/etc
mkdir -p $tmpdir/dev
mkdir -p $tmpdir/dev/pts
mkdir -p $tmpdir/dev/shm
mkdir -p $tmpdir/proc
mkdir -p $tmpdir/sys
mkdir -p $tmpdir/lib
mkdir -p $tmpdir/var
mkdir -p $tmpdir/mnt
cp `which busybox.static` $tmpdir/bin/busybox
$tmpdir/bin/busybox --install $tmpdir/bin

cp $init $tmpdir/init
chmod +x $tmpdir/init

cd $tmpdir
find . | cpio --create --format='newc' > $tmpfile
gzip < $tmpfile > $initrd
sync

rm -rf $tmpdir
rm -rf $tmpfile
